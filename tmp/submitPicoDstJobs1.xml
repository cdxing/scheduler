<?xml version="1.0" encoding="utf-8" ?>
<!-- Job parameters -->
<job maxFilesPerProcess="1" filesPerHour="1" fileListSyntax="xrootd">
  <stdout discard="true"/>

  <!-- Task list -->
  <command>
    stardev
    root4star -q -b -l RunAnalyzer.C+
    root4star -q -b -l PicoDstAnalyzer2.C+\(\"$FILELIST\",\"$JOBID\"\)
  </command>

  <!-- Necessary files -->
  <SandBox installer="ZIP">
    <Package>
      <File>file:/star/u/dchen/GitHub/KKinvM/StRoot</File>
      <File>file:/star/u/dchen/GitHub/KKinvM/RunAnalyzer.C</File>
      <File>file:/star/u/dchen/GitHub/KKinvM/PicoDstAnalyzer2.C</File>
    </Package>
  </SandBox>

  <!-- Get input files from get_file_lis.pl -->
  <input URL="filelist:/star/data01/pwg/dchen/Ana/7p2GeV_FXT_2018/7p2GeV_2018_NFS.lis" nFiles="1000" />
  <!--input URL="file:/star/data01/pwg/ywu27/PicoDst/*.root" nFiles="all" /-->

  <input URL="catalog:star.bnl.gov?production=P19ie,filetype=daq_reco_picoDst,trgsetupname=production_26p5GeV_fixedTarget_2018,tpx=1,filename~st_physics,sanity=1,storage!=HPSS" nFiles="1000" />


  <!-- Run log & error messages -->
  <!-- <stdout URL="file:/star/data01/pwg/dchen/Ana/7p2GeV_FXT_2018/KKinvM/scheduler/out/$JOBID.out" /> -->
  <stderr URL="file:/star/data01/pwg/dchen/Ana/7p2GeV_FXT_2018/KKinvM/scheduler/out/$JOBID.err" />
  <output fromScratch="*.root" toURL="file:/star/data01/pwg/dchen/Ana/7p2GeV_FXT_2018/KKinvM/result/"/>

</job>
